


<% flash.each do |name,msg| %>
  <% if name == "success" %>
    <div class="ui info message transition">
      <i class="close icon"></i>
      <div class="header">
        <%= msg %>
      </div>
    </div>
  <% else %>
    <div class="ui negative message transition">
      <i class="close icon"></i>
      <div class="header">
        <%= msg %>
      </div>
    </div>
  <% end %>
<% end %>
