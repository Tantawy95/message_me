
<h1 class="ui center aligned icon header">Welcome to MessageMe
  <i class="violet keyboard icon" id = "title-icon"></i>
</h1>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session,html: {class: "ui form", role: "form"}, url: login_path) do |f| %>
        <div class="field">
          <%= f.label :username, class: "field" %>
          <div class="ui left icon input">
            <%= f.text_field :username, class: "ui left icon input", placeholder: "Enter a username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
        <%= f.label :password, class: "field" %>
          <div class="ui left icon input">
            <%= f.password_field :password, class: "ui left lock icon input", placeholder: "Enter password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.submit "Login", class: "large ui yellow basic button"%>
      <% end %>
    </div>
    <div class="middle aligned column">
      <%= link_to "Sign Up", signup_path, class: "big ui violet basic signup icon button " %>
    </div>
  </div>
  <div class="ui vertical divider">
    <i class="violet expand icon"></i>
  </div>
</div>
