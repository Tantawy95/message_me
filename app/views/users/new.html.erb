<h2 class="ui center aligned icon header" >
  <i class="circular violet users icon"></i>
  Sign up to MessageMe app
</h2>


<div class="ui violet inverted segment" id = "space-seg">
  <%= form_with(model: @user,url: signup_path, class: "ui big inverted form", local: true) do |f| %>
    <div class="two fields">
      <div class="field">
        <%= f.label :username, class: "field" %>
        <%= f.text_field :username, class: "input", placeholder: "Username" %>
      </div>
      <div class="field">
        <%= f.label :password, class: "field" %>
        <%= f.password_field :password, class: "input", placeholder: "Password" %>
      </div>
    </div>
    <%= f.submit "Sign up!", class: "ui big yellow basic submit button" %>
  </div>
<% end %>
